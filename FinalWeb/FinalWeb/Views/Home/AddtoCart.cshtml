@model FinalWeb.Models.PRODUCT

<div class="container">

    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-lg-6">
                <input type="hidden" name="id" value="@Model.PRODUCTID" />
                <img src="~/Uploads/products/@Model.PROIMG" style="height:250px;width:100%" />
            </div>

            <div class="col-lg-6">
                <h3>@Model.PRONAME</h3>
                <p><strong>@Model.PROPRICE</strong>đ</p>
                <input type="number" min="1" max="10" name="qty"value="1" />
                <input type="submit" value="Add to Cart" class="btn btn-warning" />
            </div>

        </div>

    }
</div>

