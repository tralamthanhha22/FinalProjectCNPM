<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" 
          integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
          crossorigin="anonymous" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Pharmacity", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (Session["Fullname"] == null)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                        <li>@Html.ActionLink("Sản phẩm", "Index", "Home")</li>
                        <li>@Html.ActionLink("Về chúng tôi", "About", "Home")</li>
                        <li>@Html.ActionLink("Liên lạc", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Đăng nhập", "Login", "Home")</li>
                        <li><a href="/Home/CheckOut">
                            <i class="fa">&#xf07a; @Session["item_count"]</i>
                            </a>
                        </li>
                    </ul>
                }
                else
                {
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                <li>@Html.ActionLink("Sản phẩm", "Index", "PRODUCTs")</li>
                <li>@Html.ActionLink("Về chúng tôi", "About", "Home")</li>
                <li>@Html.ActionLink("Liên lạc", "Contact", "Home")</li>
                <li>
                    @Html.ActionLink(@Session["Fullname"].ToString(), "Details/"
               + @Session["AGENTID"].ToString(), "AGENTs")
            </li>
            <li>@Html.ActionLink("Lịch sử đặt hàng", "Index", "ORDERs")</li>
            <li>@Html.ActionLink("Đăng xuất", "Logout", "Home")</li>
            <li>@Html.ActionLink("Xóa tài khoản", "Delete/"+ @Session["AGENTID"], "AGENTs")</li>
            <li>
                <a href="/Home/CheckOut">
                    <i class="fa">&#xf07a; @Session["item_count"]</i>
                </a>
            </li>
            </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Chào mừng quý khách!</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
